{
  "name": "issuetracker",
  "displayName": "issuetracker",
  "description": "",
  "version": "0.0.1",
  "engines": {
    "vscode": "^1.58.0"
  },
  "categories": [
    "Other"
  ],
  "activationEvents": [
    "onCommand:issuetracker.helloWorld",
    "onView:issues"
  ],
  "main": "./out/extension.js",
  "contributes": {
    "configuration": {
      "title": "IssueTracker",
      "properties": {
        "issueTracker.gitLabPersonalAccessToken": {
          "type": "string",
          "default": false,
          "description": "Gitlab Personal Access Token"
        }
      }
    },
    "viewsContainers": {
      "activitybar": [
        {
          "id": "issue-explorer",
          "title": "Issue Explorer",
          "icon": "src/media/logo.png"
        }
      ]
    },
    "views": {
      "issue-explorer": [
        {
          "id": "issues",
          "name": "issues",
          "icon": "src/media/logo.png",
          "contextualTitle": "Issues"
        }
      ]
    },
    "menus": {
      "view/title": [
        {
          "command": "issueTracker.refreshEntry",
          "when": "view == issues",
          "group": "navigation"
        },
        {
          "command": "issueTracker.convertTodoItems",
          "when": "view == issues",
          "group": "navigation"
        }
      ]
    },
    "commands": [
      {
        "command": "issuetracker.helloWorld",
        "title": "Hello World"
      },
      {
        "command": "issuetracker.createIssue",
        "title": "Create Issue"
      },
      {
        "command": "issueTracker.refreshEntry",
        "title": "Refresh",
        "icon": "src/media/refresh.png"
      },
      {
        "command": "issueTracker.convertTodoItems",
        "title": "Convert",
        "icon": "src/media/export.png"
      }
    ]
  },
  "scripts": {
    "vscode:prepublish": "npm run compile",
    "compile": "tsc -p ./",
    "watch": "tsc -watch -p ./",
    "pretest": "npm run compile && npm run lint",
    "lint": "eslint src --ext ts",
    "test": "node ./out/test/runTest.js"
  },
  "devDependencies": {
    "@types/glob": "^7.1.3",
    "@types/mocha": "^8.0.4",
    "@types/node": "^12.11.7",
    "@types/node-fetch": "^2.5.11",
    "@types/vscode": "^1.58.0",
    "@typescript-eslint/eslint-plugin": "^4.14.1",
    "@typescript-eslint/parser": "^4.14.1",
    "eslint": "^7.19.0",
    "glob": "^7.1.6",
    "mocha": "^8.2.1",
    "typescript": "^4.1.3",
    "vscode-test": "^1.5.0"
  },
  "dependencies": {
    "@jamesgmarks/utilities": "^0.4.17",
    "@types/dotenv": "^8.2.0",
    "dotenv": "^10.0.0",
    "node-fetch": "^2.6.1"
  }
}